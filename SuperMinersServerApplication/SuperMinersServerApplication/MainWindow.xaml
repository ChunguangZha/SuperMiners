                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="奖励推荐人矿工：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Row="3" Grid.Column="1" Value="{Binding AwardReferrerMiners, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="奖励推荐人矿石：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Row="4" Grid.Column="1" Value="{Binding AwardReferrerStones, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" DecimalPlaces="3"/>
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="奖励推荐人钻石：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
