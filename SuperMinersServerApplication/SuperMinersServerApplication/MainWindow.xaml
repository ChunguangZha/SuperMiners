                                </Grid>-->
                            </Grid>
                        </TabItem>
                        <TabItem Name="tabitemGameConfig" Header="游戏规则">
                            <ScrollViewer>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="1 人民币 =" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Column="1" Value="{Binding Yuan_RMB, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" DecimalPlaces="2"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Strings.RMB, Mode=OneWay, Source={StaticResource Language}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="1 "/>
                                        <Run Text="{Binding Strings.RMB, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="="/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="1" Grid.Column="1" Value="{Binding RMB_GoldCoin, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Maximum="1000000" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Strings.GoldCoin, Mode=OneWay, Source={StaticResource Language}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="1 "/>
                                        <Run Text="{Binding Strings.Mine, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="="/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="2" Grid.Column="1" Value="{Binding RMB_Mine, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Maximum="1000000" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Strings.RMB, Mode=OneWay, Source={StaticResource Language}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="1 "/>
                                        <Run Text="{Binding Strings.Miner, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="="/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="3" Grid.Column="1" Value="{Binding GoldCoin_Miner, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Maximum="1000000" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Strings.GoldCoin, Mode=OneWay, Source={StaticResource Language}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="1 "/>
                                        <Run Text="{Binding Strings.RMB, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="="/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="4" Grid.Column="1" Value="{Binding Stones_RMB, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Maximum="1000000" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding Strings.Stone, Mode=OneWay, Source={StaticResource Language}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="1 "/>
                                        <Run Text="{Binding Strings.RMB, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="="/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="5" Grid.Column="1" Value="{Binding Diamonds_RMB, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Maximum="1000000" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="5" Grid.Column="2" Text="{Binding Strings.Diamond, Mode=OneWay, Source={StaticResource Language}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="每座矿山储量为：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Row="6" Grid.Column="1" Value="{Binding StonesReservesPerMines, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Maximum="1000000" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="6" Grid.Column="2" Text="{Binding Strings.Stone, Mode=OneWay, Source={StaticResource Language}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="7" Grid.Column="0" Text="每个矿工每小时生产：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Row="7" Grid.Column="1" Value="{Binding OutputStonesPerHour, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" DecimalPlaces="3"/>
                                    <TextBlock Grid.Row="7" Grid.Column="2" Text="{Binding Strings.Stone, Mode=OneWay, Source={StaticResource Language}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="8" Grid.Column="0" Text="矿石买家奖励倍数：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Row="8" Grid.Column="1" Value="{Binding StoneBuyerAwardGoldCoinMultiple, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Maximum="10000" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="8" Grid.Column="2" Text="倍金币" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="9" Grid.Column="0" Name="lblExchangeExpensePercent1" Text="提现手续费百分比：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Row="9" Grid.Column="1" x:Name="txtExchangeExpensePercent" Value="{Binding ExchangeExpensePercent, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="9" Grid.Column="2" Name="lblExchangeExpensePercent2" Text="%" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="10" Grid.Column="0" Text="最低手续费：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Row="10" Grid.Column="1" Value="{Binding ExchangeExpenseMinNumber, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="10" Grid.Column="2" Text="{Binding Strings.RMB, Mode=OneWay, Source={StaticResource Language}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                </Grid>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Name="tabitemIncomeAccount" Header="收款账户" Visibility="Collapsed">
                            <Grid>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="收款支付宝账户：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <TextBox Grid.Column="1" Text="{Binding IncomeMoneyAlipay, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="收款支付宝真实姓名：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding IncomeMoneyAlipayRealName, Mode=TwoWay}"  Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <StackPanel Grid.Row="2" Grid.Column="0">
                                        <TextBlock Text="收款支付宝二维码：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                        <Button Name="btnUpdateAlipay2DCodeImage" Content="导入收款二维码图片" Margin="10" Click="btnUpdateAlipay2DCodeImage_Click"/>
                                    </StackPanel>
                                    <Image Grid.Row="2" Grid.Column="1" Source="{Binding Alipay2DCodeImage}" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
                                </Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                    <Button Grid.Row="1" Name="btnSaveConfig" Content="保  存" HorizontalAlignment="Right" Margin="20,10" Padding="30,5" Click="btnSaveConfig_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
