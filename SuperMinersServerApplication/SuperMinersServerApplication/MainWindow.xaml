<Window x:Class="SuperMinersServerApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:SuperMinersServerApplication.MyControl"
        Loaded="Window_Loaded"
        Title="服务器配置" Height="500" Width="800" Icon="Images/black_server.ico">
    <Grid>
        <TabControl>
            <TabItem Header="服务控制">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="87*"/>
                        <RowDefinition Height="355*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="服务状态">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"></ColumnDefinition>
                                <ColumnDefinition Width="430"></ColumnDefinition>
                                <ColumnDefinition Width="120"></ColumnDefinition>
                                <ColumnDefinition Width="100*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Height="32" HorizontalAlignment="Center" Margin="0" Name="imgStarted" Stretch="Fill" VerticalAlignment="Center" Width="32" Source="Images/ServerUp.png" />
                            <Image Grid.Column="0" Height="32" HorizontalAlignment="Center" Margin="0" Name="imgStopped" Stretch="Fill" VerticalAlignment="Center" Width="32" Source="Images/ServerDown.png" />
                            <Label Grid.Column="1" Content="服务状态:" Height="23" HorizontalAlignment="Stretch" Margin="5,0" Name="label2" VerticalAlignment="Top" FontSize="12" Padding="2" VerticalContentAlignment="Center" />
                            <Label Grid.Column="1" Name="lblServiceWasStarted" Content="服务正在运行..." Height="23" HorizontalAlignment="Stretch" Margin="5,25,5,0" VerticalAlignment="Top" FontSize="12" Padding="2" VerticalContentAlignment="Center" FontWeight="Bold" />
                            <Label Grid.Column="1" Name="lblServiceWasStopped" Content="服务已经停止" Height="23" HorizontalAlignment="Stretch" Margin="5,25,5,0" VerticalAlignment="Top" FontSize="12" Padding="2" VerticalContentAlignment="Center" FontWeight="Bold" />
                            <ProgressBar Grid.Column="1" Height="23" HorizontalAlignment="Stretch" Margin="5,25,5,0" Name="progressbar" VerticalAlignment="Top" Visibility="Hidden" IsIndeterminate="True" />
                            <Button Name="btnStartService" Grid.Column="2" Height="23" HorizontalAlignment="Stretch" Margin="5,25,5,0" VerticalAlignment="Top" Click="btnStartService_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Images/Start.png" Width="16" Height="16" />
                                    <TextBlock TextAlignment="Center" Height="15">启动服务</TextBlock>
                                </StackPanel>
                            </Button>
                            <Button Name="btnStopService" Grid.Column="2" Height="23" HorizontalAlignment="Stretch" Margin="5,25,5,0" VerticalAlignment="Top" Click="btnStopService_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Images/Stop.png" Width="16" Height="16" />
                                    <TextBlock TextAlignment="Center" Height="15">停止服务</TextBlock>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Header="日志">
                        <ListBox Name="listboxLogs"/>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="配  置">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TabControl Name="tabcontrolConfig">
                        <TabItem Name="tabitemRegisterUser" Header="注册用户">
                            <Grid>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="同一IP最大允许注册玩家数：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Column="1" Value="{Binding UserCountCreateByOneIP, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="赠送新注册玩家"/>
                                        <Run Text="{Binding Strings.Exp, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="："/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="1" Grid.Column="1" Value="{Binding GiveToNewUserExp, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="赠送新注册玩家"/>
                                        <Run Text="{Binding Strings.GoldCoin, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="："/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="2" Grid.Column="1" Value="{Binding GiveToNewUserGoldCoin, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="赠送新注册玩家"/>
                                        <Run Text="{Binding Strings.Mine, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="："/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="3" Grid.Column="1" Value="{Binding GiveToNewUserMines, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="赠送新注册玩家"/>
                                        <Run Text="{Binding Strings.Miner, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="："/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="4" Grid.Column="1" Value="{Binding GiveToNewUserMiners, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
                                    <TextBlock Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
                                        <Run Text="赠送新注册玩家"/>
                                        <Run Text="{Binding Strings.Stone, Mode=OneWay, Source={StaticResource Language}}"/>
                                        <Run Text="："/>
                                    </TextBlock>
                                    <my:NumericTextBox Grid.Row="5" Grid.Column="1" Value="{Binding GiveToNewUserStones, Mode=TwoWay}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" DecimalPlaces="3"/>
                                </Grid>
                            </Grid>
                        </TabItem>
                        <TabItem Name="tabitemAwardReferrer" Header="推荐人奖励">
                            <Grid>
                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Border BorderBrush="LightGray" BorderThickness="1,1,1,0">
                                        <TextBlock Text="推荐级别" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Run Text="奖励"/>
                                            <Run Text="{Binding Strings.Exp, Mode=OneWay, Source={StaticResource Language}}"/>
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Run Text="奖励"/>
                                            <Run Text="{Binding Strings.GoldCoin, Mode=OneWay, Source={StaticResource Language}}"/>
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="3" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Run Text="奖励"/>
                                            <Run Text="{Binding Strings.Mine, Mode=OneWay, Source={StaticResource Language}}"/>
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="4" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Run Text="奖励"/>
                                            <Run Text="{Binding Strings.Miner, Mode=OneWay, Source={StaticResource Language}}"/>
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="5" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Run Text="奖励"/>
                                            <Run Text="{Binding Strings.Stone, Mode=OneWay, Source={StaticResource Language}}"/>
                                        </TextBlock>
                                    </Border>
                                    <Border Grid.Column="6" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Run Text="奖励"/>
                                            <Run Text="{Binding Strings.Diamond, Mode=OneWay, Source={StaticResource Language}}"/>
                                        </TextBlock>
                                    </Border>
                                    <ListBox Grid.Row="1" Grid.ColumnSpan="7" ItemsSource="{Binding InnerListAwardReferrerConfig}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border BorderBrush="LightGray" BorderThickness="1,1,1,0">
                                                        <TextBlock Text="{Binding ReferLevel}" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                                                    </Border>
                                                    <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                                        <my:NumericTextBox Value="{Binding AwardReferrerExp, Mode=TwoWay}" DecimalPlaces="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" />
                                                    </Border>
                                                    <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                                        <my:NumericTextBox Value="{Binding AwardReferrerGoldCoin, Mode=TwoWay}" DecimalPlaces="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" Maximum="10000"/>
                                                    </Border>
                                                    <Border Grid.Column="3" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                                        <my:NumericTextBox Value="{Binding AwardReferrerMines, Mode=TwoWay}" DecimalPlaces="2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                    </Border>
                                                    <Border Grid.Column="4" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                                        <my:NumericTextBox Value="{Binding AwardReferrerMiners, Mode=TwoWay}" DecimalPlaces="2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                    </Border>
                                                    <Border Grid.Column="5" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                                        <my:NumericTextBox Value="{Binding AwardReferrerStones, Mode=TwoWay}" DecimalPlaces="2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                    </Border>
                                                    <Border Grid.Column="6" BorderBrush="LightGray" BorderThickness="0,1,1,0">
                                                        <my:NumericTextBox Value="{Binding AwardReferrerDiamond, Mode=TwoWay}" DecimalPlaces="2" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <StackPanel Grid.Row="2" Grid.ColumnSpan="7" Orientation="Horizontal">
                                        <TextBlock Text="设置推荐人奖励层级：" Margin="10,5"/>
                                        <ComboBox Name="cmdAwardLevel" Width="50" SelectedIndex="{Binding AwardLevelFrom0, Mode=TwoWay}">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="3"/>
                                            <ComboBoxItem Content="4"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="6"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                                <!--<Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="奖励推荐人贡献值：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Column="1" Value="{Binding AwardReferrerExp}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" DecimalPlaces="2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="奖励推荐人金币：" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"/>
                                    <my:NumericTextBox Grid.Row="1" Grid.Column="1" Value="{Binding AwardReferrerGoldCoin}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" Maximum="10000" DecimalPlaces="2"/>
