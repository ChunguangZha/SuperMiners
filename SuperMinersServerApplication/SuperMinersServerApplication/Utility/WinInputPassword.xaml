<Window x:Class="SuperMinersServerApplication.Utility.WinInputPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="200" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowActivated="False" Topmost="True" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="请输入密码：" Margin="10" HorizontalAlignment="Left" FontSize="16"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="1" Margin="10" VerticalAlignment="Top" FontSize="16"/>
        <Button Grid.Row="2" Name="btnOK" Content="确定" Padding="20,5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,10,100,10" Click="btnOK_Click" IsDefault="True"/>
        <Button Grid.Row="2" Name="btnCancel" Content="取消" Padding="20,5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="btnCancel_Click" IsCancel="True"/>
    </Grid>
</Window>
