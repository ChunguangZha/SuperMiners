<Window x:Class="SuperMinersCustomServiceSystem.View.Windows.ViewPlayerLoginLogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="查看玩家登录日志" Height="500" Width="600" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <DataGrid Name="dataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="*" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="用户名" Width="*" Binding="{Binding UserName}"/>
                <DataGridTextColumn Header="登录IP" Width="*" Binding="{Binding LoginIP}"/>
                <DataGridTextColumn Header="登录MAC" Width="*" Binding="{Binding LoginMac}"/>
                <DataGridTextColumn Header="登录时间" Width="*" Binding="{Binding LoginTime}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
