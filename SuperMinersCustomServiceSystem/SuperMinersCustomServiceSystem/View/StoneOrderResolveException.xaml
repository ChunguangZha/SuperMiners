<Window x:Class="SuperMinersCustomServiceSystem.View.StoneOrderResolveException"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="处理矿石异常订单" Height="300" Width="300" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="订单号" Margin="10,5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox Grid.Column="1" Text="{Binding OrderNumber}" Margin="5" IsReadOnly="True" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="买家" Margin="10,5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding LockedByUserName}" Margin="5" IsReadOnly="True" VerticalAlignment="Center"/>
    </Grid>
</Window>
