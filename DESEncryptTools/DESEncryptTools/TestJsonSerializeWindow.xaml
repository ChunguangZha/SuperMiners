<Window x:Class="DESEncryptTools.TestJsonSerializeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="测试Json序列化" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button Name="btnEncrypt" Content="对象序列化为Json" Width="200" VerticalAlignment="Top" Margin="10" Click="btnEncrypt_Click"/>
        <TextBox Grid.Row="1" Name="txtDescString_ToEncrypt" TextWrapping="Wrap" Margin="10" VerticalScrollBarVisibility="Auto" />
        <Button Grid.Row="2" Name="btnDecrypt" Content="从Json反序列化" Width="200" VerticalAlignment="Top" Margin="10" Click="btnDecrypt_Click"/>
    </Grid>
</Window>
