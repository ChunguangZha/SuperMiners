                            <TextBlock Text="采矿区" FontSize="16"/>
                        </Grid>
                    </TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Name="gridActionMessage">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Margin="5,0">
                                <Run Text="共"/>
                                <Run Text="{Binding SystemAllPlayerCount}"/>
                                <Run Text="玩家"/>
                                <Run Text="{Binding SystemAllMinerCount}"/>
                                <Run Text="{Binding Strings.Miner, Mode=OneWay, Source={StaticResource Language}}"/>
                            </TextBlock>
                            <TextBlock Grid.Row="1" VerticalAlignment="Top" Margin="5,0">
                                <Run Text="当前系统共累计生产： "/>
                                <Run Text="{Binding SystemAllOutputStoneCount}"/>
                                <Run Text="{Binding Strings.Stone, Mode=OneWay, Source={StaticResource Language}}"/>
                            </TextBlock>
                            <ListBox Grid.Row="2" Margin="5" ItemsSource="{Binding ListPlayerActionLog}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Margin="5" FontStyle="Italic" FontSize="12" Foreground="DarkBlue">
                                                <Run Text="{Binding UserName}"/>
                                                <Run Text="{Binding Time}"/>
                                            </TextBlock>
                                            <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="20,5,5,5" Text="{Binding LogMessage}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                        <Grid Grid.Column="1" Name="gridGetMoneyShowImages" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="1" Text="提现晒图" Margin="5,0"/>
