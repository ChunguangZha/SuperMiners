<Window x:Class="SuperMinersWPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="超级矿工 内测0.01版" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="475*"/>
        </Grid.RowDefinitions>
        <Grid Name="panelLogo">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="LOGO" Margin="10" Width="64" Height="64" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock Grid.Column="1" Text="{Binding Title, Mode=OneWay, Source={StaticResource Language}}" FontSize="48" VerticalAlignment="Center" FontWeight="Bold" FontStyle="Italic"/>
        </Grid>
        <Border Grid.Column="0" Grid.Row="1" Name="panelUserInfo" Margin="5" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="423*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Text="矿主：" FontSize="16" HorizontalAlignment="Right" Margin="5" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Text="{Binding UserName}" FontSize="16" Margin="5" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" HorizontalAlignment="Right" Margin="5">
                    <Run Text="{Binding Strings.Exp, Mode=OneWay, Source={StaticResource Language}}"/>
                    <Run Text="："/>
                </TextBlock>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding Exp, Mode=OneWay}" IsReadOnly="True" Width="100" Margin="5" HorizontalAlignment="Left"/>
                    <Button Name="btnInvitationFriends" Content="邀请好友" Width="70" Margin="5" Click="btnInvitationFriends_Click"/>
                </StackPanel>
                <TextBlock Grid.Row="2" HorizontalAlignment="Right" Margin="5">
                    <Run Text="{Binding Strings.RMB, Mode=OneWay, Source={StaticResource Language}}"/>
                    <Run Text="："/>
                </TextBlock>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding RMB, Mode=OneWay}" IsReadOnly="True" Width="100" Margin="5"/>
                    <Button Name="btnRMBRecharge" Content="充值" Width="70" Margin="5" Click="btnRMBRecharge_Click"/>
                </StackPanel>
                <TextBlock Grid.Row="3" HorizontalAlignment="Right" Margin="5">
                    <Run Text="{Binding Strings.GoldCoin, Mode=OneWay, Source={StaticResource Language}}"/>
                    <Run Text="："/>
                </TextBlock>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding GoldCoin, Mode=OneWay}" IsReadOnly="True" Width="100" Margin="5"/>
                    <Button Name="btnGoldCoinRecharge" Content="充值" Width="70" Margin="5" Click="btnGoldCoinRecharge_Click"/>
                </StackPanel>
                <TextBlock Grid.Row="4" HorizontalAlignment="Right" Margin="5">
                    <Run Text="{Binding Strings.Mine, Mode=OneWay, Source={StaticResource Language}}"/>
                    <Run Text="："/>
                </TextBlock>
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding MinesCount, Mode=OneWay}" IsReadOnly="True" Width="100" Margin="5"/>
                    <Button Name="btnMinesBuy" Content="购买" Width="70" Margin="5" Click="btnMinesBuy_Click"/>
                </StackPanel>
                <TextBlock Grid.Row="5" HorizontalAlignment="Right" Margin="5">
                    <Run Text="{Binding Strings.Miner, Mode=OneWay, Source={StaticResource Language}}"/>
                    <Run Text="："/>
                </TextBlock>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding MinersCount, Mode=OneWay}" IsReadOnly="True" Width="100" Margin="5"/>
                    <Button Name="btnMinersBuy" Content="购买" Width="70" Margin="5" Click="btnMinersBuy_Click"/>
                </StackPanel>
                <TextBlock Grid.Row="6" HorizontalAlignment="Right" Margin="5">
                    <Run Text="{Binding Strings.Diamond, Mode=OneWay, Source={StaticResource Language}}"/>
                    <Run Text="："/>
                </TextBlock>
                <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding StockOfDiamonds, Mode=OneWay}" IsReadOnly="True" Width="100" Margin="5"/>
                    <Button Name="btnDiamondsSell" Content="出售" Width="70" Margin="5" Click="btnDiamondsSell_Click"/>
                </StackPanel>
                <TextBlock Grid.Row="7" HorizontalAlignment="Right" Margin="5">
                    <Run Text="{Binding Strings.Stone, Mode=OneWay, Source={StaticResource Language}}"/>
                    <Run Text="："/>
                </TextBlock>
                <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Text="{Binding StockOfStones, Mode=OneWay}" IsReadOnly="True" Width="100" Margin="5"/>
                    <Button Name="btnStonesSell" Content="出售" Width="70" Margin="5" Click="btnStonesSell_Click"/>
                </StackPanel>
                <Grid Grid.Row="9" Grid.ColumnSpan="2">
                    <Button Content="挖矿动画" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="180" Margin="5"/>
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" FontStyle="Italic" Foreground="Red">
                        <Run Text="当前产量 "/>
                        <Run Text="{Binding AllOutputPerHour, Mode=OneWay}"/>
                        <Run Text="{Binding Strings.Stone, Mode=OneWay, Source={StaticResource Language}}"/>
                        <Run Text="/小时"/>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,30,10,10">
                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontStyle="Italic" Foreground="Red">
                            <Run Text="当前产出 "/>
                            <Run Text="{Binding TempOutputStones, Mode=OneWay}"/>
                            <Run Text="{Binding Strings.Stone, Mode=OneWay, Source={StaticResource Language}}"/>
                        </TextBlock>
                        <Button Name="btnGatherStones" Content="收取" Padding="10,1" Margin="5,0" Click="btnGatherStones_Click"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="10" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Name="btnGetMoney" Content="提现" Width="100" Margin="5" Click="btnGetMoney_Click"/>
                    <Button Grid.Column="1" Name="btnSetting" Content="设置" Width="100" Margin="5" Click="btnSetting_Click"/>
                </Grid>
            </Grid>
        </Border>
        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Name="panelNotify" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="通知：" FontSize="16"/>
                <TextBlock Grid.Column="1" Text="发钱了发钱了发钱了快来抢发钱了" FontSize="14" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Center" FontStyle="Italic" TextDecorations="Underline"/>
            </Grid>
            <TabControl Grid.Row="1" Background="Gray" Margin="5" FontSize="14">
