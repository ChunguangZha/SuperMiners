<UserControl x:Class="SuperMinersWPF.MyControl.MyAutoScrollTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
              Name="ctr"
             d:DesignHeight="300" d:DesignWidth="300">

    <Canvas Name="LayoutRoot" Background="Transparent">
        <TextBlock Name="text" Text="test" MinWidth="1" MinHeight="1" Foreground="{Binding ElementName=ctr, Path=Foreground}">
            <TextBlock.RenderTransform>
                <TranslateTransform X="0"/>
            </TextBlock.RenderTransform>
        </TextBlock>
    </Canvas>
</UserControl>
