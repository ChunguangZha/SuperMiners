<UserControl  x:Class="SuperMinersWPF.Views.StonesMarketUserControl" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:tradeControl="clr-namespace:SuperMinersWPF.Views.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <TabControl>
        <TabItem Header="实时订单">
            <tradeControl:StoneActiveOrderListControl x:Name="controlStoneActiveOrderList"/>
        </TabItem>
        <TabItem Header="未完成的订单">
            <tradeControl:StoneNotFinishedBuyTradeRecordControl x:Name="controlStoneNotFinishedList"/>
        </TabItem>
    </TabControl>
</UserControl>
