<Window x:Class="SuperMinersWPF.Views.Windows.RouletteWinAwardAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="恭喜您抽中幸运大奖" Height="200" Width="300" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="恭喜您抽中" VerticalAlignment="Center"/>
            <TextBlock Name="txtAwardName" Text="10元话费" FontSize="16" Foreground="Red" VerticalAlignment="Center"/>
        </StackPanel>
        <Button Grid.Row="1" Name="btnTakeAward" Width="100" Content="领取" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Center" Click="btnTakeAward_Click"/>
        <TextBlock Grid.Row="1" Name="txtMessage" TextWrapping="Wrap" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button Grid.Row="2" Name="btnClose" Visibility="Collapsed" Width="100" Content="关闭" Margin="10" HorizontalAlignment="Center" Click="btnClose_Click"/>
    </Grid>
</Window>
